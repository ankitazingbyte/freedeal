<div class="container" >
  <div class= "row">
    <div id="map" class="col-md-12" style="width:985px;height:400px;background:none !important"></div><br>
    <div class= "col-md-6">  
      <h1>Contact Informations</h1> 
        <% @contacts.each do |contact| %>
          <p><div class= "col-md-2"><%= image_tag "address_logo.jpeg", width: "40px" %></div>
         Address<br><%= contact.address %></p><br>
          <p><div class= "col-md-2"><%= image_tag "email_logo.png", width: "40px" %></div>Email<br><%= contact.email %></p><br>
          <p><div class= "col-md-2"><%= image_tag "phone.jpeg", width: "40px" %></div>Phone<br><%= contact.phone %></p>
        <% end %>
    </div>
    <div class= "col-md-6">
      <h1>Get In Touch</h1> 
      <%= render "messages/form" %>
    </div>
  </div>
</div>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDQ46BfH57TltvW_pqOACKtTbyWF7z3i4s&callback=initMap" type="text/javascript"></script>
<script>
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: -34.397, lng: 150.644},
      zoom: 8
    });
  }
</script>