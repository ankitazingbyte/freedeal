<%= form_for Message.new do |form| %>
  <div class="field">
    <%= form.text_field :name, class: "form-control", placeholder: "Message" %>
  </div><br>

  <div class="field">
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div><br>

  <div class="field">
    <%= form.text_field :subject, class: "form-control", placeholder: "Subject" %>
  </div><br>

  <div class="field">
    <%= form.text_field :message, class: "form-control", placeholder: "Message" %>
  </div><br>
    <%= form.submit "Send Message", class: "btn btn-success" %>
<% end %>
