<div class="navbar-wrapper">
  <div class="container">
    <nav class="navbar navbar-static-top" style="background-color: #4ca0af; font-size: 18px;">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Free Dealz</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to root_path, class: 'login-button' do %>Home<% end %></li>
            <li><a href="#about">About</a></li>
            <li><%= link_to deals_path, class: 'login-button' do %>Dealz<% end %></li>
            <li class="dropdown">
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <% if user_signed_in? %>
                      <%= current_user.email %>
                  <% end %><span class="caret"></span></a>
                  <ul class="dropdown-menu" style="background-color: #eff0f5; min-width: 250px;" >
                      <% if current_user.nil? %>
                          <li><%= link_to new_user_session_path, class: 'login-button' do %>Sign in<% end %></li>
                      <% else %>
                          <li><%= link_to edit_user_registration_path, class: 'login-button' do %><i class="fa fa-lock"></i> Change Password <% end %></li>
                          <li><%= link_to destroy_user_session_path, method: :delete do %>Log Out
                          <span class="pull-right"><i class="fa fa-power-off"></i></span><% end %></li>
                      <% end %>
                  </ul>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
