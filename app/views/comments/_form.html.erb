<%= form_for Comment.new do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :website_url %>
    <%= form.text_field :website_url,  class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message,  class: "form-control" %>
  </div><br>
    <%= form.submit "SUBMIT COMMENT", class: "btn btn-primary" %>
<% end %>
